<configuration>
    <!-- Appender para guardar los logs en un archivo -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/optica.log</file> <!-- Archivo donde se guardarÃ¡n los logs -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern> <!-- Formato del log -->
        </encoder>
    </appender>

    <!-- Definimos el nivel del log y la salida -->
    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>
